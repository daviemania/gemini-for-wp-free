{
    "name": "Gemini Project",
    "build": {
        "dockerfile": "Dockerfile",
        "options": ["--network=host", "--dns=8.8.8.8"]
    },
    "runArgs": ["--env-file", "/gemini-project/.env"],
    "workspaceFolder": "/gemini-project",
    "workspaceMount": "source=${localWorkspaceFolder},target=/gemini-project,type=bind",
    "overrideCommand": false,
    "shutdownAction": "stopContainer",
    "remoteUser": "bitnami",
    "containerUser": "bitnami",
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "ms-vscode.makefile-tools"],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "npm install && echo 'Dev container ready!'"
}

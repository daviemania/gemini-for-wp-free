{
    "name": "Gemini Project",
    "build": {
        "dockerfile": "Dockerfile",
        "options": ["--network=host"]
    },
    "workspaceFolder": "/gemini-project",
    "workspaceMount": "source=${localWorkspaceFolder},target=/gemini-project,type=bind",

    // Container stays running even when VS Code disconnects
    "overrideCommand": false,
    "shutdownAction": "stopContainer",

    // Set user
    "remoteUser": "bitnami",
    "containerUser": "bitnami",

    // VS Code extensions to install in the container
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "ms-vscode.makefile-tools"],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    },

    // Expose ports if needed
    "forwardPorts": [],

    // Post-create command (optional)
    "postCreateCommand": "echo 'Dev container ready!'"
}

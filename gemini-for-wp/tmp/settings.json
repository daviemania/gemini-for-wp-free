{
  // Theme and appearance
  "workbench.colorTheme": "GitHub Dark High Contrast",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.settings.applyToAllProfiles": [],
  "secretStorage.cache": false,

  // --- Remote Configuration (SSH/WSL) ---
  "remote.SSH.remotePlatform": {
    "lightsail-gemini-project": "linux"
  },
  "remote.SSH.configFile": "C:\\Users\\David_Mania\\.ssh\\config",
  "remote.SSH.useLocalServer": false,
  "remote.SSH.connectTimeout": 30,
  "remote.SSH.lockKeysInContainer": false,
  "remote.autoForwardPortsSource": "hybrid",

  // WSL-specific optimizations
  "remote.WSL2.connectionMethod": "wsl.exe",

  // Container settings
  "devcontainers.defaultExtensions": [
    "ms-vscode-remote.remote-containers",
    "ms-vscode-remote.remote-ssh",
    "ms-vscode-remote.remote-wsl"
  ],
  "containers.commands.attach": "${containerCommand} exec -it ${containerId} ${shellCommand}",

  // --- File and Workspace Settings ---
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.startupPrompt": "never",

  // WSL file watching optimizations
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/env/**": true,
    "**/venv/**": true
  },

  // --- Git Settings ---
  "git.confirmSync": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  // --- Terminal Settings Optimized for WSL ---
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.profiles.windows": {
    "Ubuntu (WSL)": {
      "path": "wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "terminal.integrated.cwd": "/home/dav3/gemini-project", // Fixed path
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",

  // --- Project Management ---
  "projectManager.git.baseFolders": [
    "/home/bitnami/gemini-project/",
    "/workspace",
    "/home/dav3/gemini-project" // Fixed WSL path
  ],

  // --- AWS Settings ---
  "aws.telemetry": false,
  "aws.cwl.limit": 10,
  "aws.s3.maxItemsPerPage": 30,
  "aws.suppressPrompts": {
    "apprunnerNotifyPricing": true,
    "apprunnerNotifyPause": true,
    "ecsRunCommand": true,
    "ecsRunCommandEnable": true,
    "ecsRunCommandDisable": true,
    "regionAddAutomatically": true,
    "yamlExtPrompt": true,
    "fileViewerEdit": true,
    "createCredentialsProfile": true,
    "samcliConfirmDevStack": true,
    "remoteConnected": true,
    "minIdeVersion": true,
    "ssoCacheError": true
  },

  // --- Copilot and AI features ---
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "chat.commandCenter.enabled": false,

  // --- Other Settings ---
  "github-actions.workflows.pinned.refresh.enabled": true,
  "cronTasks.debug": false,
  "DockerRun.DisableAutoGenerateConfig": true,
  "containers.commands.build": "${containerCommand} build --pull --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",
  "git-autoconfig.configList": [
    {
      "user.email": "mail@maniainc.com",
      "user.name": "daviemania"
    }
  ],
  "dotnetAcquisitionExtension.existingDotnetPath": [],
  "dev.containers.dockerPath": "podman",
  "dev.containers.executeInWSL": true,
  "dev.containers.dockerSocketPath": "unix:///run/user/1000/podman/podman.sock",
  "dev.containers.mountWaylandSocket": false
}
